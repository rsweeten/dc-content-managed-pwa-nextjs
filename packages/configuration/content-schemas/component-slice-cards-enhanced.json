{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://amp-rsa.amplience.com/slice-cards-enhanced.json",

	"title": "Title",
	"description": "Description",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"component": {
		"type": "string",
		"const": "SliceCards"
	},
	"properties": {
        "component": {
			"type": "string",
			"const": "SliceCards"
		},
		"CycleText": {
			"title": "Cycle Text Banner",
			"allOf": [
				{ "$ref": "https://rs-modular.com/cycletext.json" }
			]
		},
		"animation": {
			"title": "Card Animation Style",
			"description": "determines card animation",
			"type": "string",
			"default": "fade",
			"enum": [
				"fade",
				"slideleft",
				"slideright",
				"slidedown",
				"slideup"
			]
		},
		"animationSpeed": {
			"title": "Animation Speed",
			"description": "Card animation speed in milliseconds",
			"examples": [
				300, 750, 1200
			],
			"type": "number",
			"minimum": 0,
			"maximum": 3000
		},
        "cardAngle": {
			"title": "Card Skew Angle",
			"description": "add a slight counter/clockwise slant to the cards",
			"examples": [
				-10, 10, -3, 3
			],
            "default": 0,
			"type": "number",
			"minimum": -10,
			"maximum": 10
		},
		"cards": {
			"type": "array",
			"title": "Cards",
			"description": "Please select the Cards to display in this Sliced Cards component",
			"minItems": 1,
			"maxItems": 10,
			"items": {
				"allOf": [
					{
						"$ref": "https://amp-rsa.amplience.com/card-enhanced.json"
					}
				]
			}
		}
	},
	"propertyOrder": []
}