{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://rs-modular.com/cycletext.json",

	"title": "Cycle Text Banner",
	"description": "re-usable banner featuring a timed cycling text",

	"allOf": [
		{
			"$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
		}
	],
	
	"type": "object",
	"properties": {
		"component": {
			"type": "string",
			"const": "CycleTextBanner"
		},
		"heroImage": {
			"title": "Hero Image",
			"allOf": [
				{ "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link" }
			]
		},
        "eyebrowText": {
			"title": "Hero Eyebrow Text",
			"description": "Text above the bold",
			"type": "string",
			"minLength": 0,
			"maxLength": 30
		},
		"staticBold": {
			"title": "Bold Intro Text",
			"description": "Text above the cycling text",
			"type": "string",
			"minLength": 0,
			"maxLength": 15
		},
        "cycleText": {
			"title": "Cycling Bold Text",
			"description": "The Bold text that changes",
			"type": "array",
			"minItems": 0,
			"maxItems": 10,
			"items": {
				"type": "object",
				"properties": {
					"text": {
						"title": "text",
						"type": "string",
						"minLength": 0,
						"maxLength": 30
					}
				}
			}
		},
        "subText": {
			"title": "Subtext",
			"description": "Smaller text below all the other text",
			"type": "string",
			"minLength": 0,
			"maxLength": 400
		},
		"cycleCadence": {
			"title": "Cycle Cadence",
			"description": "Cadence of the cycling text (how fast in milliseconds)",
			"type": "number",
			"examples":[
				200,
				500,
				1500
			],
			"minimum": 0,
			"maximum": 5000
		},
		"desktopPlacement": {
			"title": "Desktop Placement",
			"description": "Choose a left or right text box placement",
			"type": "string",
			"default": "left",
			"enum": [
				"left",
				"right"
			]
		},
		"verticalAlignment": {
			"title": "Vertical Alignment",
			"description": "Vertical alignment fo all text",
			"type": "string",
			"default": "bottom",
			"enum": [
				"top",
				"middle",
				"bottom"
			]
		},
		"desktopTextAlignment": {
			"title": "Desktop Text Alignment",
			"description": "left, right, or center text alignment for Desktop",
			"type": "string",
			"default": "left",
			"enum": [
				"left",
				"right",
				"center"
			]
		},
		"mobileTextAlignment": {
			"title": "Mobile Text Alignment",
			"description": "left, right, or center text alignment for Mobile",
			"type": "string",
			"default": "center",
			"enum": [
				"left",
				"right",
				"center"
			]
		}
	},
	"propertyOrder": []
}