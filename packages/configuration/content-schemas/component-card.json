{ 
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://amp-rsa.amplience.com/card.json",
  "title": "Card",
  "description": "A single card of content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "Image",
      "description": "Image used in the card",
      "allOf": [
        {
          "$ref": "https://amp-rsa.amplience.com/image.json"
        }
      ]
    },
    "links": {
      "type": "array",
      "title": "Links",
      "description": "Links for the card",
      "items": {
        "$ref": "https://amp-rsa.amplience.com/link.json"
      },
      "minItems": 0,
      "maxItems": 4
    }
  }
}
