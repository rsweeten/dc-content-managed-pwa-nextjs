{ 
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://amp-rsa.amplience.com/card-enhanced.json",
    "title": "Card",
    "description": "A single card of content",
    "allOf": [
      {
        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
      }
    ],
    "type": "object",
    "properties": {
      "image": {
        "type": "object",
        "title": "Image",
        "description": "Image used in the card",
        "allOf": [
          {
            "$ref": "https://amp-rsa.amplience.com/di-image.json"
          }
        ]
      },
      "mainText": {
        "type": "string",
        "title": "Card Main Text",
        "description": "Main Text of the card (optional)",
        "validation": "Please enter less than 50 characters",
        "minLength": 0,
        "maxLength": 50
      },
      "subText": {
        "type": "string",
        "title": "Card Secondary Text",
        "description": "Card description",
        "validation": "Please enter less than 150 characters",
        "minLength": 0,
        "maxLength": 150
      },
      "textAlignment": {
        "title": "Text Alignment",
        "description": "left, right, or center text alignment",
        "type": "string",
        "default": "right",
        "enum": [
            "left",
            "right",
            "center"
        ]
      },
      "verticalAlignment": {
        "title": "Vertical Text Alignment",
        "description": "top, middle, or bottom text alignment",
        "type": "string",
        "default": "bottom",
        "enum": [
            "top",
            "middle",
            "bottom"
        ]
      },
      "linkPosition": {
        "title": "Position Link with card text",
        "description": "place link with the card text OR below the image. Text Alignment still applies",
        "default": "withtext",
        "type": "string",
        "enum": [
            "withtext",
            "belowimage"
        ]
      },
      "color": {
        "title": "Text Color",
        "description": "Color for all text in the card. If link is placed below the image, that text will be black.",
        "format": "color",
        "type": "string"
      },
      "blend": {
        "title": "Text Blending",
        "description": "Blending option for text over image",
        "type": "string",
        "default": "normal",
        "enum": [
            "normal",
            "multiply",
            "screen",
            "overlay",
            "darken",
            "lighten",
            "color-dodge",
            "color-burn",
            "difference",
            "exclusion",
            "hue",
            "saturation",
            "color",
            "luminosity"
        ]
      },
      "links": {
        "type": "array",
        "title": "Links",
        "description": "Links for the card",
        "items": {
          "$ref": "https://amp-rsa.amplience.com/link.json"
        },
        "minItems": 0,
        "maxItems": 4
      }
    }
  }
  